@model ProjectSite.Models.LocalPasswordModel

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Wachtwoord aanpassen</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword,"Oud wachtwoord")
                @Html.PasswordFor(m => m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword,"Niew Wachtwoord")
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword,"bevestig nieuw wachtwoord")
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Verander wachtwoord" />
    </fieldset>
}
